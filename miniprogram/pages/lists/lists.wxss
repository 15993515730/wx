.all_article_header_card .all_article_header_message {
  padding: 0rpx 16rpx 0rpx 16rpx;
  color: #666666;
  font-size:28rpx;
}
.gus_you_like {
  padding:80rpx 0rpx 0rpx 32rpx;
}
.gus_you_like .h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 44rpx;
  text-align: left;
}
.gus_you_like .item {
  float: left;
  width: calc((100% - 72rpx) / 2);
  margin-right:32rpx;
}
.gus_you_like .item .img {
  border-radius: 8rpx;
  width:306rpx;
  height:228rpx;
}
.img image{
  width:306rpx;
  height:228rpx;
}
.gus_you_like .item .title {
  margin-top: 16rpx;
  margin-bottom: -48rpx;
  font-size: 32rpx;
  color: #333333;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
