/* pages/lists/lists.wxss */
.all{
	width:calc(100% - 64rpx);
	margin: auto;
	overflow: hidden;
  background: #ffffff;
  margin-top: 20rpx;
}
.all_article_header_top {
  padding-left: 32rpx;
  padding-right: 32rpx;
  height: 92rpx;
  margin-bottom: 32rpx;
}
.all_article_header_top_nav {
  width: 100%;
  height: 92rpx;
  padding-top: 34rpx;
}
.top {
  float: left;
  font-size:24rpx;
  color: #000000;
}
.all_article_header_card {
  width: 91.5%;
  margin-left: 4.25%;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  height: 216rpx;
  margin-bottom: 48rpx;
  text-align: left;
}
.all_article_header_card {
  position: relative;
}
.all_header_card_h1 {
  font-size: 36rpx !important;
  font-weight: 600;
  padding: 32rpx 16rpx 16rpx 0;
  color: #000 !important;
}
.disinline {
  display: inline-block;
  vertical-align: top;
}
.disinline {
  display: inline-block;
}
